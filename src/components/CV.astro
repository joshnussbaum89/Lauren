  .content-container:last-of-type {
    padding-bottom: 2rem;
    border-bottom: none;
  }

  .content-container h2 {
    font-size: var(--size-xl);
    text-align: left;
  }

  .content-container h3 {
    font-size: var(--size-lg);
  }

  .main {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .main ol {
    list-style-type: decimal;
    display: flex;
