    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem 0;
    overflow-wrap: break-word;
    border-bottom: 1px solid var(--color-grey-dark);
  }

  .content-container:first-of-type {
    padding-top: 2rem;
