    background-color: var(--color-white);
    box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.1);
  }

  .wrapper {
    width: 100%;
    max-width: 1440px;
    margin: auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
  }

  h1 {
    width: 200px;
  }

  li,
  a {
    display: flex;
    align-items: center;
  }

  a {
    transition: all var(--transition-normal);
  }

  li {
    font-family: var(--font-cooper-bold);
  }

  a {
    text-decoration: none;
    color: var(--color-black);
  }

  svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  /* Desktop */

  .desktop-items,
  .desktop-icons {
    gap: 2rem;
    display: none;
    list-style: none;
  }

  @media (min-width: 1024px) {
    .desktop-items,
    .desktop-icons {
      display: flex;
      flex-wrap: wrap;
    }
  }

  .desktop-items a:hover {
    color: var(--color-light-pink);
  }

  /* Mobile */

  .mobile-nav {
    display: block;
  }

  @media (min-width: 1024px) {
    .mobile-nav {
      display: none;
    }
  }

  .mobile-nav a {
    color: var(--color-white);
    transition: all var(--transition-normal);
  }

  .mobile-nav a:hover {
    color: var(--color-light-pink);
  }

  .hamburger {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 2rem;
    height: 2rem;
    z-index: 2;
    cursor: pointer;
  }

  .hamburger .top,
  .hamburger .middle,
  .hamburger .bottom {
    width: 32px;
    height: 2px;
    background: var(--color-black);
    border-radius: 1rem;
    transition: all 0.8s cubic-bezier(0.34, -0.26, 0.28, 1.25);
  }

  .hamburger .top {
    transform: translateY(-4px);
  }

  .hamburger .bottom {
    transform: translateY(4px);
  }

  .hamburger.active .top,
  .hamburger.active .middle,
  .hamburger.active .bottom {
    background: var(--color-white);
  }

  .hamburger.active .top {
    transform: translateY(2px) rotate(405deg);
  }

  .hamburger.active .middle {
    transform: translateX(-50px);
    opacity: 0;
  }

  .hamburger.active .bottom {
    transform: translateY(-2px) rotate(-405deg);
  }

  .mobile-nav-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    opacity: 0;
    z-index: -1;
    visibility: hidden;
    overflow: auto;
    background: var(--color-blue);
    transition: all var(--transition-normal);
  }

  .hamburger.active + .mobile-nav-overlay {
    opacity: 1;
    visibility: visible;
    z-index: 1;
  }

  .mobile-nav-items {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    margin: 8rem 2rem 4rem;
  }

  .mobile-nav-items li {
    margin-bottom: 2rem;
    font-size: var(--size-xl);
  }

  .mobile-nav-icons {
    position: absolute;
    left: 50%;
    bottom: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    transform: translateX(-50%);
  }

  .mobile-nav-icons li {
    font-family: var(--font-cooper-light);
    font-size: var(--size-lg);
  }

  .mobile-nav-icons svg {
    width: 2rem;
    height: 2rem;
    stroke: var(--color-white);
    fill: var(--color-blue);
    transition: all var(--transition-normal);
  }

  .mobile-nav-icons svg:hover {
    stroke: var(--color-light-pink);
  }
</style>

<script>
  const body = document.querySelector('body')
  const hamburger = document.getElementById('hamburger')
  const mobileNavItems = document.querySelectorAll('.mobile-nav-overlay li')
  let overlayDisplayed = false

  function handleMobileNavigationOnClick() {
    overlayDisplayed = !overlayDisplayed
    body?.setAttribute('data-overlay-displayed', `${overlayDisplayed}`)
    hamburger?.classList.toggle('active')
  }

  function handleMobileNavigationOnResize() {
    if (window.innerWidth >= 1024) {
      overlayDisplayed = false
      body?.setAttribute('data-overlay-displayed', `${overlayDisplayed}`)
      hamburger?.classList.remove('active')
    }
  }

  hamburger?.addEventListener('click', handleMobileNavigationOnClick)
  window.addEventListener('resize', handleMobileNavigationOnResize)
  mobileNavItems.forEach((item) => item.addEventListener('click', handleMobileNavigationOnClick))
</script>
