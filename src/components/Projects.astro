<style>
  .projects {
    width: 100%;
    max-width: 1440px;
  }

  .projects h3 {
    margin-bottom: 2rem;
  }

  .tab-container {
    margin-bottom: 4rem;
  }

  .tab {
    margin-right: 1rem;
    font-size: var(--size-lg);
    color: var(--color-black-faded);
    transition: var(--transition-normal);
    cursor: pointer;
  }

  @media (min-width: 768px) {
    .tab {
      font-size: var(--size-xl);
    }
  }

  .tab:hover,
  .tab.active {
    color: var(--color-light-pink);
  }

  .project-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    grid-gap: 2rem;
  }

  .project {
    display: none;
    height: fit-content;
    padding: 2rem;
    border: 2px solid var(--color-black-faded);
    border-radius: 0.5rem;
    background-color: var(--color-white);
    transition: var(--transition-normal);
  }

  .project.active {
    display: block;
  }

  .project:hover {
    box-shadow: 0 0 10px var(--color-box-shadow);
  }

  .project h4,
  .project p:not(:last-child) {
    margin-bottom: 1rem;
  }

  .project h4 {
    font-size: var(--size-lg);
  }

  .project h4 a {
    color: var(--color-black);
  }

  .project h4 a:hover {
    color: var(--color-light-pink);
  }
  
  .project p {
    color: var(--color-black-faded);
  }
</style>

<script>
  const tabs = document.querySelectorAll('.tab') as NodeListOf<HTMLSpanElement>
  const projects = document.querySelectorAll('.project') as NodeListOf<HTMLDivElement>

  tabs.forEach((tab) => {
    tab.addEventListener('click', () => {
      const type = tab.dataset.type

      tabs.forEach((tab) => tab.classList.remove('active'))
      tab.classList.add('active')

      projects.forEach((project) => {
        project.classList.remove('active')

        if (project.dataset.type === type || type === 'all') {
          project.classList.add('active')
        }
      })
    })
  })
</script>
