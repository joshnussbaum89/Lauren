  <style>
    .projects {
      width: 100%;
      max-width: 1440px;
      margin: 0 auto;
    }

    .projects h3 {
      margin-bottom: 2rem;
    }

    .tab-container {
      margin-bottom: 4rem;
    }

    .tab {
      margin-right: 1rem;
      font-size: var(--size-lg);
      color: var(--color-black-faded);
      transition: var(--transition-medium);
      cursor: pointer;
    }

    @media (min-width: 768px) {
      .tab {
        font-size: var(--size-xl);
      }
    }

    .tab:hover,
    .tab.active {
      color: var(--color-light-pink);
    }

    .project-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      grid-gap: 2rem;
    }

    .project {
      display: none;
      height: fit-content;
      padding: 2rem;
      border: 1px solid var(--color-black-faded);
      border-radius: 1.25rem;
      background-color: var(--color-white);
      transition: var(--transition-medium);
      box-shadow: 0 0 20px var(--color-box-shadow);
    }

    .project.active {
      display: block;
    }

    .project:hover {
      background-color: var(--color-black);
      border: 1px solid var(--color-black);
    }

    .project h4,
    .project p,
    .project a {
      transition: var(--transition-medium);
    }

    .project:hover h4,
    .project:hover p,
    .project:hover a {
      color: var(--color-white);
    }

    .project:hover a:hover {
      color: var(--color-light-pink);
    }

    .project h4,
    .project p:not(:last-child) {
      margin-bottom: 1rem;
    }

    .project h4 {
      font-size: var(--size-lg);
    }

    .project h4 a {
      color: var(--color-black);
    }

    .project p {
      color: var(--color-black-faded);
    }
  </style>

  <script>
    const tabs = document.querySelectorAll('.tab')
    const projects = document.querySelectorAll('.project')

    tabs.forEach((tab) => {
      tab.addEventListener('click', () => {
        const tabName = tab.getAttribute('data-type')

        tabs.forEach((tab) => tab.classList.remove('active'))
        tab.classList.add('active')

        projects.forEach((project) => {
          const projectName = project.getAttribute('data-type')

          project.classList.remove('active')

          if (projectName === tabName || tabName === 'all') {
            project.classList.add('active')
          }
        })
      })
    })
  </script>
